<div class="form_container">
  <div class="navbar">
    <h2>New Category</h2>
    <%= link_to categories_path do %>
  <i class="fas fa-arrow-left"></i>
  <span class="sr-only">Back</span>
<% end %>

  </div>

  <%= form_for @category, html: { class: "navbar-form" } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :icon %>
    <%= f.text_field :icon %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>

</div>
